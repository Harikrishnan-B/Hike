    <div class="form-container">
        <div class="header"><a href="/home"><img src="/images/Screenshot (58).png" alt="" style="height: 100px; width: auto; border-radius: 50%;"></a>
        </div>
        <% if(error){%>
            <p><%= error%></p>
            <%}%>
        <p></p>
        <form action="/login" method="post">
            <div class="form-group">
                <label for="name">Email</label>
                <input type="text" id="email" name="email" placeholder="Enter your name" required autocomplete="off" value="nandu@gmail.com">
            </div>

         <div style="position: relative;">
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" placeholder="Password" value="007007">
                <span style="position: absolute; right: 10px; bottom: 5px;" class="toggle-password" onclick="togglePasswordVisibility('password')" >üëÅÔ∏è</span>
            </div>
            <a href="/forgetPassword" style="position: absolute; right: 10px; top: 60px;">Forget Password?</a>

         </div>
