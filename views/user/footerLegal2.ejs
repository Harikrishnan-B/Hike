  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const hikeText = document.querySelector('.hike-text');
      const loremText = document.querySelector('.lorem-text');

      setTimeout(() => {
        hikeText.classList.add('visible');
      }, 1000);

      setTimeout(() => {
        loremText.classList.add('visible');
      }, 1000);
    });
  </script>
</body>
