<head>
  <style>
      body {
          margin: 0; /* Remove default margin */
      }

      .top_offer {
          background-color: rgb(250, 250, 250);
          width: 100%;
          height: 40px;
          display: flex;
          color: rgb(0, 0, 0);
          align-items: center;
          padding: 0 10px; /* Adjusted padding */
          font-family: 'Irish Grover', cursive;
          background-color: #ffffff;
      }

      header a {
          text-decoration: none;
          color: black;
          font-size: large;
      }

      .navbarx {
          padding-left: 0;
      }

      .style {
          font-family: 'Irish Grover', cursive;
          padding: 0 20px;
